<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Playwrite+DK+Loopet:wght@100..400&family=Plus+Jakarta+Sans:ital@0;1&family=Poetsen+One&display=swap"
        rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .yo {
            font-family: "Playwrite DK Loopet", cursive;
            font-optical-sizing: auto;
            font-style: normal;
        }
    </style>
</head>

<body class="bg-yellow-50 h-[200vh]">
    <div class="h-[10vh] w-full bg-slate-300 flex flex-row justify-between p-[40px] font-[gilroy] items-center">
        <div class="mx-4  text-[80px] font-extrabold hover:scale-110 duration-700 text-gray-800">REMOND</div>
        <div class="flex md:flex-row flex-col font-bold text-[30px] gap-10 mr-[60px]">
            <div class="font-extralight">All blogs</div>
            <div class="font-extralight">About</div>
            <div class="font-extralight">Contact</div>
        </div>
    </div>
    <div class="flex flex-col justify-around items-center h-[70vh] mt-[50px]">
        <div class="text-[50px] font-extralight">H O W - G R O Q- C A N - H E L P </div>
        <div class="text-[100px] yo font-medium text-center">Why talk to humans when you have LLMs?</div>
        <div class="yo text-[120px] font-extrabold">Hello , I'm <h1 class="inline text-blue-500">Groq </h1>from <h1
                class="inline text-yellow-600">2050</h1>
        </div>
    </div>
    <div class="flex md:flex-row flex-col gap-3 justify-evenly mt-[250px]">
        <div
            class="card h-[200px] w-1/4 bg-zinc-300 rounded-[15px]  flex items-center justify-center text-[30px] font-light ">
            Arts </div>
        <div
            class="card h-[200px] w-1/4 bg-zinc-300 rounded-[15px]  flex items-center justify-center text-[30px] font-light ">
            Science </div>
        <div
            class="card h-[200px] w-1/4 bg-zinc-300 rounded-[15px]  flex items-center justify-center text-[30px] font-light ">
            Business </div>
    </div>
    <div class="flex justify-center items-center m-[50px]">
        <div class=" w-[80%] bg-zinc-300 flex flex-col items-center p-[2%]" id="box">

        </div>
    </div>
    <script>
        document.querySelectorAll(".card").forEach(element => {
            element.addEventListener("click", async () => {

                const query = element.textContent.trim();
                console.log(query);
                try {
                    const response = await fetch(`/ask?name=${query}`);
                    if (response) {
                        const data = await response.json();
                        console.log(typeof (data.result));
                        console.log(JSON.parse(data.result));
                        quiz(JSON.parse(data.result));

                    }
                } catch (err) {
                    console.log(err);
                }
            });
        });
        let box = document.getElementById('box');
        function quiz(data) {
            let i = 0;
            if (Array.isArray(data)) {
                data.forEach(e => {
                    box.innerHTML += `<div class="h-[10%] w-[80%] border border-black rounded-[5px] p-[5px]">${e.question}</div>
                    <div class="h-[10%] w-[80%] flex flex-row justify-between my-[15px] items-center">
                        <input type="text" placeholder="Enter your answer" class=" bg-yellow-50 h-[80%] w-[60%]  text-center" id="answer-${i}">
                        <button class="h-[80%] w-[20%] border border-black p-[5px]" answer ="${e.answer} index="${i}"">Submit</button>
                    </div>
                   <div id="feedback-${i}" class="h-[10%] w-[80%] my-[5px]"></div>
                    `;
                    i++;
                });
            } else {
                console.error("Invalid data format. Expected an array.");
            }
        }
        document.querySelectorAll("button").forEach(element => {
            element.addEventListener("click", () => {
                console.log("yoooo");
                const answer = document.getElementById(`answer-${element.getAttribute("index")}`).value;
                const correctAnswer = element.getAttribute("answer"); 
                if (answer === correctAnswer) {
                    document.getElementById(`feedback-${element.getAttribute("index")}`).textContent = "Correct!";
                } else {
                    document.getElementById(`feedback-${element.getAttribute("index")}`).textContent = `Incorrect! , The answer is ${correctAnswer}`;
                }
            });
        });

    </script>
    <script src="../index.js"></script>
</body>

</html>